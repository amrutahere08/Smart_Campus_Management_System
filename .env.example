# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///smart_campus.db

# Google Generative AI Configuration (Gemini API)
# Get your API key from: https://makersuite.google.com/app/apikey
# NOTE: This is NOT an OpenAI key - it's specifically for Google's Gemini AI
GOOGLE_API_KEY=your-google-gemini-api-key-here

# Upload Folders
UPLOAD_FOLDER=uploads
FACE_DATA_FOLDER=uploads/faces
EVENT_FILES_FOLDER=uploads/events

# Application Settings
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,docx,xlsx,pptx
